<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>FDScout</display-name>
  <context-param>
    <param-name>org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG</param-name>
    <param-value>classpath:tiles.xml</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.properties</param-value>
  </context-param>
  <context-param>
    <param-name>log4jFileLocation</param-name>
    <!--  <param-value>/home/prespher/logs/web</param-value> -->
    <param-value>/usr/local/logs/web</param-value>
  </context-param>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>web-instance-root</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:config-web-context.xml</param-value>
  </context-param>
  <context-param>
    <param-name>applicationId</param-name>
    <param-value>FDScoutWeb</param-value>
  </context-param>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/jsp/errorHandling/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/jsp/errorHandling/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/jsp/errorHandling/exception.jsp</location>
  </error-page>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.fdscout.context.listener.FDScoutContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.fdscout.context.listener.FDScoutSessionListener</listener-class>
  </listener>
<!--   <listener> -->
<!--     <listener-class>com.fdscout.context.listener.FDScoutSessionAttributeBindingListener</listener-class> -->
<!--   </listener> -->
  <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <session-config>
    <session-timeout>-1</session-timeout>
    <cookie-config>
    		<http-only>true</http-only>
    </cookie-config>
  </session-config>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/FDScoutDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>